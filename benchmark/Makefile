# ==================================================================================== #
# = Executable
# ==================================================================================== #

BIN = benchmark

# ==================================================================================== #
# = Compiler settings
# ==================================================================================== #

CC      = gcc
CFLAGS += -O3 -fno-tree-vectorize -std=c11
LIBS   += -lm -lcriterion

# ==================================================================================== #
# = Object / Assembly Files
# ==================================================================================== #

%.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@

%.s : %.c
	$(CC) $(CFLAGS) -S $< -o $@

SRCS=$(wildcard *.c \
../objectives/objectives.c \
../penguin/main.c \
../HGWOSCA/main.c \
)

OBJS=$(SRCS:.c=.o)

ASMS=$(SRCS:.c=.s)


# ==================================================================================== #
# = Targets
# ==================================================================================== #

all: $(OBJS) $(ASMS)
	$(CC) $(OBJS) -o $(BIN) $(LIBS)

clean:
	rm -rf *.txt $(OBJS) $(ASMS)
	rm -rf $(BIN)
